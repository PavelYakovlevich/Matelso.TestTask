{
  "ConnectionStrings": {
    "PostgreSQL": "User ID=postgres;Password=admin;Host=localhost;Port=5432;Database=ContactManager;"
  },
  
  "ContactNotificationsConfiguration": {
    "birthdaySoonDays": 14
